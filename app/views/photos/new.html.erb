
<div class='container'>
  <div class='col-md-6 col-md-offset-3'>
  <h1>New Photo</h1>
  <br>
  <br>
  <% if current_user.albums.count == 0 %>
  <p>You must create an album to add new images to before uploading a photo</p>
  <p><%#= link_to('New Album', new_album_path), class: "btn btn-primary"   %></p>
  <% else %>



    <%= form_for @photo do |f| %>
    <%= f.label :title, 'Photo title:' %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :album_id, 'Album:' %>
    <%= f.select :album_id, current_user.albums.all.map { |a| [a.title, a.id] }, required: true %>
    <br>
    <br>
    <%= link_to('New Album', new_album_path)   %>
    <br>
    <br>
    <%= f.label :photo_image, 'Choose File:' %><br>
    <%= f.file_field :photo_image %>
    <br>
    <br>
    <%= f.label :caption, 'Caption:' %>
    <%= f.text_field :caption %>
    <br>
    <br>
    
     <p><%# @ingredients.each do |ingredient| %>
    <!-- <div class='list'> -->
      <%#= f.label :ingredient, ingredient.name %>-
       <%#= check_box_tag "recipe[ingredient_ids][]", ingredient.id, @recipe.ingredients.include?(ingredient) %>&nbsp;&nbsp;
       <!-- </div> -->
       <%# end %></p>


    <%#= f.select :ingredient_id, Ingredient.all.map { |c| [c.name, c.id] } %>

       <%#= f.check_box :ingredient, recipe.ingredients << ingredient %>


      <%#= link_to(ingredient.name, ingredient_path(ingredient)) %>

      <br>
     <br>
      <br>
      <br>
      <div id='button'>
      <%= f.label 'Update:' %>
      <%= f.submit 'Add Photo!!' %>
      </div>
      <% end %>
   <% end %>   
    </div>
  </div>