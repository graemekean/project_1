<div class='container'>

<h1><%= @photo.title %></h1>

<div class="col-md-10 col-md-offset-1">

<% if @photo.photo_image? %>
<%= link_to image_tag(@photo.photo_image.large.url), photo_path(@photo) %>

<!-- #photo.photo_image.medium.url %>    -->
<% end %>
</div>

<div class="row">
<%#= image_tag(@country.flag_image, alt: "alt text is always required", width:200) %>
<p><b>Album: </b><%= @photo.album.title %>.</p>
<p><b>Caption: </b> <%= @photo.caption %></p>


<div class="fb-like" 
        data-href="http://www.your-domain.com/your-page.html" 
        data-layout="standard" 
        data-action="like" 
        data-show-faces="true">
    </div>
</div>


  <div class="row">

<% if @photo.comments.first == true %>
<% @photo.comments.each do |comment| %>

<%= comment.content %> 
<%= comment.user.email %>
<%= comment.created_at %>
<% end %>
<% else %>
<h3>This photo has no comments </h3>
<% end %>

<br>
<br>

 
<h2>Comments</h2>
<% @photo.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>
 
<h2>Add a comment:</h2>
<%= form_for([@photo, @photo.comments.build]) do |f| %>
  <p>
    <%#= f.label :commenter %><br>
    <%#= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Edit', edit_photo_path(@photo) %> |
<%= link_to 'Back', photos_path %>


</div>

